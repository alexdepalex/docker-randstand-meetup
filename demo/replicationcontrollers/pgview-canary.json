{
  "kind": "ReplicationController",
  "apiVersion": "v1beta3",
  "metadata": {
    "name": "pgview-canary",
    "labels": {
      "app": "pgview",
      "environment": "production",
      "name": "pgview",
      "track": "canary"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "app": "pgview",
      "environment": "production",
      "name": "pgview",
      "track": "canary"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "pgview",
          "environment": "production",
          "name": "pgview",
          "track": "canary"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "pgview",
            "image": "pgview:2.0.0",
            "ports": [
              {
                "containerPort": 80,
                "protocol": "TCP"
              }
            ],
            "resources": {
              "limits": {
                "cpu": "100m",
                "memory": "10000000"
              }
            },
            "terminationMessagePath": "/dev/termination-log",
            "imagePullPolicy": "IfNotPresent",
            "capabilities": {}
          },
          {
            "name": "memcached",
            "image": "memcached",
            "ports": [
              {
                "containerPort": 11211,
                "protocol": "TCP"
              }
            ],
            "resources": {
              "limits": {
                "cpu": "100m",
                "memory": "10000000"
              }
            },
            "terminationMessagePath": "/dev/termination-log",
            "imagePullPolicy": "IfNotPresent",
            "capabilities": {}
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  }
}
